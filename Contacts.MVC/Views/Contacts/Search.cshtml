@model Contacts.MVC.Models.ContactsModel
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ContactID)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.DisplayTextFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNumber)
            @Html.DisplayTextFor(model => model.PhoneNumber)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress)
            @Html.DisplayTextFor(model => model.EmailAddress)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address)
            @Html.DisplayTextFor(model => model.Address)
        </div>
    }
</div>


